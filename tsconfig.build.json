{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "exclude": [
    "**/*.js",
    "**/*.jsx",
    "**/*_test.ts",
    "**/*_test.tsx"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
